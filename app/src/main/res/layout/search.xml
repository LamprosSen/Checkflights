<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <AutoCompleteTextView
        android:id="@+id/fromID"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:padding="12dp"
        android:background="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/swapID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/fromID"
        app:layout_constraintEnd_toStartOf="@+id/toID"
        app:layout_constraintStart_toEndOf="@+id/fromID"
        app:layout_constraintTop_toTopOf="@+id/fromID"
        app:srcCompat="@mipmap/arrow2" />

    <AutoCompleteTextView
        android:id="@+id/toID"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:padding="12dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fromDateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/fromID"
        app:layout_constraintTop_toBottomOf="@+id/fromID" />

    <TextView
        android:id="@+id/toDateID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/toID"
        app:layout_constraintTop_toBottomOf="@+id/toID" />

    <com.squareup.timessquare.CalendarPickerView
        android:id="@+id/calendar_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="170dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fromDateID"
        app:layout_constraintVertical_bias="0.0"
        />

    <TextView
        android:id="@+id/Adult_EconomyClacssID"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/adullt_EconomyClass"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="@+id/calendar_view"
        app:layout_constraintTop_toBottomOf="@+id/calendar_view" />

    <TextView
        android:id="@+id/SortID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:text="@string/Sort"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@+id/FilterID"
        app:layout_constraintTop_toBottomOf="@+id/calendar_view" />

    <TextView
        android:id="@+id/FilterID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/Filter"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/calendar_view"
        app:layout_constraintTop_toBottomOf="@+id/calendar_view" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="From"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/fromID"
        app:layout_constraintStart_toStartOf="@+id/fromID" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/toID"
        app:layout_constraintStart_toStartOf="@+id/toID" />

    <Button
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:text="Search"
        android:background="@drawable/lam"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</android.support.constraint.ConstraintLayout>